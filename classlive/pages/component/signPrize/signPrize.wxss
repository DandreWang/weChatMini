.signPrize{
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background: rgba(34,34,34,0.7);
  z-index:10;
}
.signPrize .box{
  height:720rpx;
  width:680rpx;
  position: absolute;
  top:50%;
  left:50%;
  margin-left:-340rpx;
  margin-top:-400rpx;
}

.signPrize .box .close{
  position:absolute;
  width:64rpx;
  height:64rpx;
  left:50%;
  bottom:-100rpx;
  margin-left:-32rpx;
}

.signPrize .box .bg{
  width:100%;
  height:100%;
}
.signPrize .box .btn{
  width:430rpx;
  height:98rpx;
  line-height: 98rpx;
  background:linear-gradient(360deg,rgba(255,241,180,1) 0%,rgba(255,222,125,1) 100%);
  box-shadow:0px 2rpx 4rpx 0px rgba(201,75,45,1);
  border-radius:49rpx;
  font-size:40rpx;
  color:rgba(237,93,64,1);
  font-weight:bold;
  text-align: center;
  position:absolute;
  bottom:98rpx;
  left:50%;
  margin-left:-215rpx;

}
