<view wx:if="{{canIUse}}">
    <view class='header'>
        <image src='/images/logo.png'></image>
    </view>
 
    <view class='content'>
        <view>申请获取以下权限</view>
        <text>获得你的公开信息(手机号)</text>
    </view>
    <view>
      <button class='bottom' type='primary' open-type="getPhoneNumber" lang="zh_CN" bindgetphonenumber="getPhoneNumber">
