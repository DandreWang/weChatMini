#detail {
  padding: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}
#detail .head {
  width: 100%;
  height: 424rpx;
  position: relative;
}
#detail .head image {
  width: 100%;
  height: 100%;
}
#detail .head .foucs {
  width: 210rpx;
  height: 34rpx;
  padding: 10rpx 0rpx;
  background: #191919;
  border-radius: 0rpx 8rpx 0rpx 8rpx;
  opacity: 0.7;
  position: absolute;
  bottom: 0;
  left: 0;
}
#detail .head .foucs text {
  display: block;
  width: 100%;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #ffffff;
  text-align: center;
}
#detail .head .share {
  width: 118rpx;
  height: 118rpx;
  position: absolute;
  top: 0;
  right: 0;
  padding: 0;
  background: transparent;
  border: none;
}
#detail .head .share image {
  width: 100%;
  height: 100%;
}
#detail .head button::after {
  border: none;
}
#detail .course {
  width: 100%;
  padding: 32rpx 0;
  font-size: 40rpx;
  color: #191919;
}
#detail .courseDetail {
  width: 100%;
  padding: 24rpx 0;
  margin: 20rpx 0 118rpx;
  font-size: 30rpx;
  color: #666666;
  border-top: 1px solid #E2E2E2;
  border-bottom: 1px solid #E2E2E2;
  opacity: 0.5;
  white-space: pre-line;
}
#detail .btnWrap {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  padding: 32rpx 5vw;
  background: #fff;
}
#detail .btnWrap .btn {
  width: 90vw;
  height: 78rpx;
  background: linear-gradient(90deg, #ff8000 0%, #ff6425 100%);
  box-shadow: 0rpx 8rpx 20px 0rpx rgba(255, 128, 0, 0.6);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #fff;
}
#detail .btnWrap .btn.disbtn {
  background: #999;
  box-shadow: unset;
}
