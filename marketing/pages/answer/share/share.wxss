.share{
    width: 100%;
    position: relative;
    padding-bottom: 150rpx;
}
.canvas-box{
    position:absolute;
    left:-10000rpx;
    top:-10000rpx;
}
.canvas-box canvas{
    width:750px;
    height:1366px;
}
.share-img {
    width: 100%;
    height: 100%;
    z-index: 1;
    position: relative;
}
.photo{
    position: absolute;
    left: 140rpx;
    top:130rpx;
    z-index: 5;
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}
.name{
    position: absolute;
    left: 280rpx;
    top: 150rpx;
    z-index: 7;
    font-size:30rpx;
    color:rgba(90,90,90,1);
}
.bg{
    width: 750rpx;
    height: 1366rpx;
}

.share-box{
    width: 100%;
    height: 150rpx;
    line-height: 150rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 3;
    background: #fff;
    text-align: center;
}
.share-box > text{
    display: inline-block;
    width:336rpx;
    height:85rpx; 
    line-height: 85rpx;
    border-radius:56rpx;
    margin:0 10rpx;
    font-size:36rpx;
    color:rgba(255,255,255,1);
    background:rgba(118,200,205,1);
}
@media only screen and (device-width:375px) and (-webkit-device-pixel-ratio: 3) {
    /* 兼容iphoneX */
    .share-box{
        bottom: 50rpx;
    }
}