.school{
    padding-bottom: 150rpx;
    position: relative;
}
.photo{
    position: absolute;
    left: 140rpx;
    top:130rpx;
    z-index: 5;
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}
.name{
    position: absolute;
    left: 280rpx;
    top: 150rpx;
    z-index: 7;
    font-size:30rpx;
    color:rgba(90,90,90,1);
}
.school > .bg{
    width: 750rpx;
    height: 1366rpx;
}
.bottom{
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    z-index: 3;
    text-align: center;
    height: 150rpx;
    line-height: 150rpx;
}
.bottom > text{
    display: inline-block;
    width:336rpx;
    height:85rpx; 
    line-height: 85rpx;
    border-radius:56rpx;
    margin:0 10rpx;
    font-size:36rpx;
    color:rgba(255,255,255,1);
}
.share{
    background:rgba(118,200,205,1);
}
.goform{
    background:rgba(242,139,0,1);
}
@media only screen and (device-width:375px) and (-webkit-device-pixel-ratio: 3) {
    /* 兼容iphoneX */
    .bottom{
        bottom: 50rpx;
    }
}