.form{
    width: 100%;
    height: 100vh;
    background: #FFF5EB;
}
.banner{
    width: 750rpx;
    height: 340rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    position: relative;
}
.banner-bottom{
    width: 758rpx;
    height: 126rpx;
    line-height: 146rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    position: absolute;
    left: 20rpx;
    bottom: -60rpx;
    z-index: 2;
    padding-left: 40rpx;
}
.banner-bottom > image{
    width: 198rpx;
    height: 70rpx;
    margin: 0 10rpx;
}
.form-content{
    background: #FFF5EB;
    position: relative;
}
.line{
    position: absolute;
    left: 0;
    top: 0;
    width: 667rpx;
    height: 716rpx;
}
.form-box{
    width:702rpx;
    height:700rpx;
    background:rgba(255,255,255,0.5);
    box-shadow:0rpx 12rpx 16rpx 0rpx rgba(187,88,0,0.48);
    border-radius:29rpx;
    position: absolute;
    left: 50%;
    margin-left: -351rpx;
    top:65rpx;
    padding:18rpx;
    box-sizing: border-box;
}
.free{
    position: absolute;
    right: 50rpx;
    top:-25rpx;
    width: 130rpx;
    height: 97rpx;
}
.form-inner{
    width: 100%;
    height: 100%;
    display: block;
    background:rgba(255,255,255,1);
    border-radius:29rpx;
    padding-top:40rpx; 
    text-align: center;
    box-sizing: border-box;
}
.title{
    font-size:48rpx;
    line-height:58rpx;
}
.title > text{
    color:rgba(255,116,0,1);
}
.sub{
    font-size:32rpx;
    color:rgba(54,54,54,1);
    line-height:39rpx;
    margin: 20rpx 0;
}
.sub > text{
    color: #FF2121;
}
input{
    width:580rpx;
    height:90rpx;
    background:rgba(242,242,242,1);
    border-radius:4rpx;
    margin: 6rpx 0;
    display: inline-block;
    text-align: left;
    padding-left: 32rpx;
    font-size:30rpx;
    color:rgba(117,117,117,1);
    line-height:90rpx;
}
button{
    width:606rpx;
    height:90rpx;
    background:rgba(255,120,0,1);
    box-shadow:0rpx 6rpx 16rpx 0rpx rgba(255,120,0,0.5);
    border-radius:45rpx;
    font-size:30rpx;
    color:rgba(255,255,255,1);
    line-height:90rpx;
    margin-top: 20rpx;
    border: none;
}
.button-hover{
    color:rgba(255,255,255,1);
    background:rgba(255,120,0,1);
}
.tips{
    position: absolute;
    bottom: 25rpx;
    left:50%;
    transform: translateX(-50%);
    font-size:26rpx;
    color:rgba(125,90,59,1);
    line-height:30rpx;
}

@media only screen and (device-width:375px) and (-webkit-device-pixel-ratio: 3) {
    /* 兼容iphoneX */
    .tips{
        bottom: 70rpx;
    }
}